<h1>Project: <%= @project.proj_name %></h1>

<% if @project.employees.any? %>
  <h4>Here are the employees for this project:</h4>

  <% @project.employees.each do |employee| %>
    <ul>
      <li>
        <%= link_to employee.name, employee_path(employee) %>
      </li>
    </ul>
  <% end %>
<% else %>
  <p>No employees are listed for this project.</p>
<% end %>



<p><%= link_to "Edit project", edit_project_path(@project) %></p>
<p><%= link_to "Delete project", project_path(@project),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>

<p><%= link_to "Return to project", project_path(@project) %></p>
